# Это предполагаемый формат вашего конфигурационного файла (например, .replit)

# Информация о версии Python, которую вы используете
modules = ["python-3.12"] # Это может быть частью replit.nix, а не .replit

# Команда для запуска при разработке (например, при нажатии кнопки "Run" в Replit)
# Замените старую команду на эту:
run = "pip install -r requirements.txt && python -m bot.bot"

# Настройки для Nix (если вы их используете)
[nix]
channel = "stable-24_05"

# Команда для запуска при развертывании (deployment)
# Также замените старую команду на эту:
[deployment]
run = ["sh", "-c", "pip install -r requirements.txt && python -m bot.bot"]
